<% if current_user %>
<div class="create_surveys">
  <h2>My Created Surveys</h2>
  <%if current_user.created_surveys%>
    <ol>
      <%current_user.created_surveys.each do |survey|%>
        <a href="/surveys/<%=survey.id%>"><li><%= survey.title%></li></a>
      <% end %>
    </ol>
  <%end%>
<%end%>
<form action="/surveys" method="post">
  <input name="title" type="text" placeholder="survey title">
  <input type="submit" value="Create New Survey">
</form>
</div>

<div class="take_surveys">
  <h2>Take a Survey!</h2>
  <ol>
  <% @surveys.each do |survey| %>
    <a href="/surveys/<%=survey.id%>"><li><%= survey.title%></li></a>
  <% end %>
</ol>
</div>
